
<h1 class="main-header-home">Home</h1>

<div class="main-home">
  <p class="user-home">{{currentUser.username}}</p>
  {{#unless currentUser.teacher}}
    <p class="user-home">Teacher</p>
  {{/unless}}

  <div class="container-home">
    {{#unless currentUser.teacher}}
      <button><a href="/questions/create">Add questions</a></button>
    {{/unless}}
    <p>{{question}}</p>
    {{#each this}}
      <p>{{question}}</p>
      <ul>
      {{#each answers}}
        <li><button>O</button><p>{{solution}}</p></li>
      {{/each}}
      </ul>
    {{/each}}
  </div>
</div>